<odoo>
  <template id="form_template" name="Maintenance Request Form">
    <t t-call="website.layout">
      <div class="container mt32">
        <h2>Maintenance Request</h2>
        <form action="/submit/maintenance" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label>Block</label>
            <select name="block" class="form-control" required>
              <t t-foreach="blocks" t-as="block">
                <option t-att-value="block.id"><t t-esc="block.name"/></option>
              </t>
            </select>
          </div>
          <div class="form-group">
            <label>Floor</label>
            <select name="floor" class="form-control" required></select>
          </div>
          <div class="form-group">
            <label>Classroom</label>
            <select name="classroom" class="form-control" required></select>
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea name="description" class="form-control" required></textarea>
          </div>
          <div class="form-group">
            <label>Image Upload</label>
            <input type="file" name="image" class="form-control" />
          </div>
          <button type="submit" class="btn btn-primary mt16">Submit</button>
        </form>
      </div>
    </t>
  </template>
</odoo>
