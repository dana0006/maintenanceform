<odoo>
  <record id="view_maintenance_classroom_form" model="ir.ui.view">
    <field name="name">maintenance.classroom.form</field>
    <field name="model">maintenance.classroom</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="block_id"/>
            <field name="floor_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_maintenance_classroom_tree" model="ir.ui.view">
    <field name="name">maintenance.classroom.tree</field>
    <field name="model">maintenance.classroom</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="block_id"/>
        <field name="floor_id"/>
      </tree>
    </field>
  </record>

  <record id="action_maintenance_classroom" model="ir.actions.act_window">
    <field name="name">Classrooms</field>
    <field name="res_model">maintenance.classroom</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
